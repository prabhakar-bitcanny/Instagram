<div align = "left">
  <% @msgs.each do |msg| %>
   <% if msg.body %>
    <% user = User.find(msg.user_id) %>
    <strong><%= link_to user.name, user, class: "hober" %></strong>
    <p><%= msg.body %></p>
   <% end %>
  <% end %>

  <%= form_for [@chat, @msg] do |f| %>
   <%= f.text_area :body %>
   <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>
   <%= f.submit "Send" %>
  <% end %>
</div>
