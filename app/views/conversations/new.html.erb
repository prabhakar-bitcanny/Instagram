<h1>New Conversation</h1>

<div align = "left">
  <%= form_tag conversations_path, method: :post do %>
    <div>
      <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :name), :class=>'gapping' %>
    </div>
    <div>
      <%= text_field_tag :subject, nil, placeholder: "Subject", :class=>'gapping' %>
    </div>
    <div>
      <%= text_area_tag :body, nil, placeholder: "Message", :class=>'gapping' %>
    </div>
    <%= submit_tag %>
  <% end %>
</div>
